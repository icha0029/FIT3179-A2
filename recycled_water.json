{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Percentage of total urban water supplied that is recycled, by state.",
  
  "width": 500,
  "height": 300,
  
  "config": {
    "background": "transparent",
    "view": {
      "stroke": null
    },
    "axis": {
      "domainColor": "black",
      "gridColor": "#d3d3d3",
      "gridOpacity": 1,
      "gridWidth": 1,
      "tickColor": "black",
      "labelColor": "black",
      "titleColor": "black"
    }
  },
  
  "data": {
    "url": "data/state_recycled_share.csv"
  },
  
  "mark": {
    "type": "bar",
    "tooltip": true
  },
  
  "encoding": {
    "x": {
      "field": "State",
      "type": "nominal",
      "title": "State / Territory",
      "sort": "-y",
      "axis": {
        "labelAngle": -45,
        "labelAlign": "right"
      }
    },
    "y": {
      "field": "RecycledPercent",
      "type": "quantitative",
      "title": "Recycled water (%)"
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "title": "State / Territory",
      "scale": {
        "domain": [
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "range": [
          "#4c78a8",
          "#f58518",
          "#e45756",
          "#72b7b2",
          "#54a24b",
          "#eeca3b",
          "#b279a2",
          "#ff9da6"
        ]
      }
    },
    "tooltip": [
      {"field": "State", "type": "nominal"},
      {
        "field": "RecycledPercent",
        "type": "quantitative",
        "format": ".1f",
        "title": "Recycled (%)"
      }
    ]
  }
}
