{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Scatter plot showing relationship between population and water received across states. Upward trend shows larger populations receive more water. States positioned higher have higher per-capita usage.",
  
  "width": 500,
  "height": 350,
  
  "config": {
    "background": "transparent",
    "view": {
      "stroke": null
    },
    "axis": {
      "domainColor": "black",
      "gridColor": "#d3d3d3",
      "gridOpacity": 1,
      "gridWidth": 1,
      "tickColor": "black",
      "labelColor": "black",
      "titleColor": "black"
    }
  },
  
  "data": {
    "url": "data/state_scatter.csv"
  },
  
  "layer": [
    {
      "mark": {
        "type": "point",
        "filled": true,
        "size": 300,
        "opacity": 1
      },
      "encoding": {
    "x": {
      "field": "AveragePopulationReceivingWater",
      "type": "quantitative",
      "title": "Average population receiving water"
    },
    "y": {
      "field": "WaterReceivedML",
      "type": "quantitative",
      "title": "Total water received (ML)"
    },
    "color": {
      "field": "State",
      "type": "nominal",
      "title": "State / Territory",
      "scale": {
        "domain": [
          "Australian Capital Territory",
          "New South Wales",
          "Northern Territory",
          "Queensland",
          "South Australia",
          "Tasmania",
          "Victoria",
          "Western Australia"
        ],
        "range": [
          "#4c78a8",
          "#f58518",
          "#e45756",
          "#72b7b2",
          "#54a24b",
          "#eeca3b",
          "#b279a2",
          "#ff9da6"
        ]
      },
      "sort": {
        "field": "WaterReceivedML",
        "op": "max",
        "order": "descending"
      }
    },
    "tooltip": [
      { "field": "State", "type": "nominal", "title": "State" },
      { "field": "AveragePopulationReceivingWater", "type": "quantitative", "title": "Avg population receiving water", "format": "," },
      { "field": "WaterReceivedML", "type": "quantitative", "title": "Water received", "format": "," }
    ]
      }
    }
  ]
}
